{
  "AllowedHosts": "*",

  "Database": {

    // Unused. Code instead fetches the connection string from the `CONNECTIONSTRING` environment variable in production.
    "ConnectionString": ""
  },

  // Log configuration
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
      }
    },

    "WriteTo": [

      // Log expression to log anything to the console.
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:HH:mm:ss} {@l:u3} {Coalesce(Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1), 'Application'), -30} {@m}\n{@x}",
            "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
          }
        }
      }
    ]
  }
}
